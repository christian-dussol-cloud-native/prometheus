{
  "annotations": {
    "list": []
  },
  "description": "CNCF Project Focus #4 - Namespace cost attribution and resource consumption overview",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "CPU Usage by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (namespace) (rate(container_cpu_usage_seconds_total[5m]))",
          "legendFormat": "{{namespace}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cores",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Memory Usage by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum by (namespace) (container_memory_usage_bytes)",
          "legendFormat": "{{namespace}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "fillOpacity": 20, "lineWidth": 2 }
        }
      }
    },
    {
      "title": "Top 10 CPU Consumers (Pods)",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (namespace, pod) (rate(container_cpu_usage_seconds_total[5m])))",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cores",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "Top 10 Memory Consumers (Pods)",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (namespace, pod) (container_memory_usage_bytes))",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 536870912 },
              { "color": "red", "value": 1073741824 }
            ]
          }
        }
      }
    },
    {
      "title": "CPU Usage by Team",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum by (label_team) (rate(container_cpu_usage_seconds_total[5m]) * on (namespace, pod) group_left(label_team) kube_pod_labels{label_team!=\"\"})",
          "legendFormat": "{{label_team}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "cores" }
      }
    },
    {
      "title": "Memory Usage by Team",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum by (label_team) (container_memory_usage_bytes * on (namespace, pod) group_left(label_team) kube_pod_labels{label_team!=\"\"})",
          "legendFormat": "{{label_team}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "title": "Namespaces with Over-Provisioning Indicators",
      "type": "table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "avg by (namespace) ((sum by (namespace, pod) (rate(container_cpu_usage_seconds_total[1h])) / sum by (namespace, pod) (kube_pod_container_resource_limits{resource=\"cpu\", container!=\"\"})) * 100)",
          "legendFormat": "{{namespace}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "green", "value": 50 }
            ]
          }
        }
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["prometheus", "cost", "cncf-project-focus"],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_namespace_labels, namespace)",
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "title": "CNCF Project Focus #4 - Cost Overview",
  "uid": "cncf-pf4-cost-overview"
}
